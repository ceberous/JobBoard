<div class="row">
	<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

	<%= simple_form_for @job , html: {class: 'form-horizontal'} do |f| %>

		<% if @job.errors.any? %>
	    	<div id="error_explanation">
	      		<h2><%= pluralize(@job.errors.count, "error") %> prohibited this todo_list from being saved:</h2>
	
	      		<ul>
	      			<% @job.errors.full_messages.each do |message| %>
	        			<li><%= message %></li>
	      			<% end %>
	      		</ul>
	    	</div>
	  	<% end %>
		
		<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12">
		<br>
		<%= f.collection_select :category_id , Category.all , :id , :name , {prompt: "Choose a Category"} , input_html: {class: "dropdown-toggle"} %>

		<br><br>

		<%= f.input :title , placeholder: "Job Title" , class: "form-control" %>
		<%= f.input :description , placeholder: "Description" , class: "form-control" %>
		<%= f.input :company , placeholder: "Company" , class: "form-control" %>
		<%= f.input :url , placeholder: "Link to Job" , class: "form-control" %>

		<br>

		<p class="tcenter">
			<%= f.submit class: "btn btn-success" %> | 
			<%= link_to "Cancel" , root_path , class: "btn btn-warning"%>
		</p>
		
		</div>
	<% end %>

	</div>
</div>